generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Partner {
  id           String @id
  tradingName  String @map("trading_name")
  ownerName    String @map("owner_name")
  document     String @unique
  coverageArea Json   @map("coverage_area")
  address      Json

  @@map("partners")
}
